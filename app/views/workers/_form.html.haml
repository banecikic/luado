-# frozen_string_literal: true
= simple_form_for(@worker) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :service
    = f.input :price
    = f.label :service
    = f.select :worker_type, Worker.worker_types, {include_blank: true}, class: "form-control  form-control-sm"
    
  .form-actions
    = f.button :submit
