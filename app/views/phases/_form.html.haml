-# frozen_string_literal: true
= simple_form_for(@phase) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :phase_title
    = f.input :content
    = f.input :price
    = f.label :job_type
    = f.select :phase_type, Phase.phase_types, {include_blank: true}, class: "form-control  form-control-sm"
    = f.input :project_id, input_html: {value: @phase.project_id || params[:project_id]}, as: :hidden
    = f.input :start_time
    = f.input :end_time




  .form-actions
    = f.button :submit
